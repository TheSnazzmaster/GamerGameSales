<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:theme="@style/ButtonStyle"
        android:id="@+id/addGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:theme="@style/TextViewStyle"
        android:id="@+id/titleTextView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fortnite 2: Fort Harder"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addGameInternetButton"
        app:layout_constraintStart_toEndOf="@+id/addGameGameImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:theme="@style/ButtonStyle"
        android:id="@+id/addGameInternetButton"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/addGameButton"
        app:layout_constraintEnd_toStartOf="@+id/addGameButton"
        app:layout_constraintTop_toTopOf="@+id/addGameButton"
        app:srcCompat="@drawable/wikimediaglobe" />

    <ImageView
        android:id="@+id/addGameGameImageView"
        android:layout_width="40dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/celesteimage" />
</androidx.constraintlayout.widget.ConstraintLayout>